#include<stdio.h>
int main()
{ 
    float avg = 0;
    float sum = 0;
    float number;
    printf("Input the 10 numbers :");
    for(int i = 1; i<11; i++)
    {
        printf("\nNumber-%d:",i);
        scanf("%f",&number);
        sum = sum + number;
        printf("%f",number);
    }
   printf("\nThe Sum of 10 no is : %f",sum);
   avg = sum/10;
   printf("\nThe Average is : %f",avg);
}
